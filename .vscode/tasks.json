  "version": "2.0.0",
  "tasks": [
    {
      "command": "bundle install",
      "label": "Install gems",
      "type": "shell",
      "icon": {
        "id": "ruby"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails db:migrate",
      "label": "Migrate databases",
      "type": "shell",
      "icon": {
        "id": "database"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails db:rollback",
      "label": "Rollback last migrations",
      "type": "shell",
      "icon": {
        "id": "database"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails db:migrate:redo",
      "label": "Redo last migrations",
      "type": "shell",
      "icon": {
        "id": "database"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails db:reset",
      "label": "Wipe databases",
      "type": "shell",
      "icon": {
        "id": "database"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails generate migration ${input:migration_details}",
      "label": "Generate new migration",
      "type": "shell",
      "icon": {
        "id": "edit"
      },
      "problemMatcher": []
    },
    {
      "command": "RAILS_ENV=development bin/rails db:fixtures:load",
      "label": "Load fixtures",
      "type": "shell",
      "icon": {
        "id": "database"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails db:fixtures:load",
      "label": "Load fixtures",
      "type": "shell",
      "icon": {
        "id": "database"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails test ${file}",
      "label": "Run all tests in current file",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "icon": {
        "id": "checklist",
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails test",
      "label": "Run all tests in project",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "icon": {
        "id": "checklist",
      },
      "problemMatcher": []
    },
    {
      "command": "bin/rails generate component ${input:component_details}",
      "label": "Generate new component",
      "type": "shell",
      "icon": {
        "id": "edit"
      },
      "problemMatcher": []
    },
    {
      "command": "bin/dev",
      "label": "Start dev server",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "icon": {
        "id": "server-process",
      },
      "problemMatcher": []
    },
  ],
  "inputs": [
    {
      "id": "migration_details",
      "type": "promptString",
      "description": "rails g migration ..."
    },
    {
      "id": "component_details",
      "type": "promptString",
      "description": "rails g component ..."
    }
  ]
